<h1 align= "center">Edit Review for <%= link_to @review.item.name, "/items/#{@review.item.id}" %></h1>
<center>
  <%= form_tag "/reviews/#{@review.id}", method: :patch do |f| %>

    <%= text_field_tag :title, "#{@review.title}" %>

    <%= text_field_tag :content, "#{@review.content}" %>

    <label for="rating">Select a Rating:</label>
      <select name="rating" id="rating">
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select><br><br>

    <%= submit_tag 'Update Review' %>
  <% end %>
</center>
