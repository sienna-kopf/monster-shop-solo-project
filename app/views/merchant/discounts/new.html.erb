<h1>Add New Discount</h1>

<center>
  <%= form_tag "/merchant/discounts", method: :post do %>
    <%= label_tag :percentage_discount %>
    <%= number_field_tag :percentage_discount, nil, min: 1 %>

    <%= label_tag :item_quantity %>
    <%= number_field_tag :item_quantity, nil, min: 1 %>

    <%= submit_tag 'Add Discount' %>
  <% end %>
</center>
